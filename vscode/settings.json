{
  "editor.suggest.showWords": false,
  "editor.wordBasedSuggestions": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,  // Opcional: desativa dicas ao passar o mouse
  "editor.autoClosingBrackets": "never",  // Opcional: evita autocompletar colchetes
  "editor.autoClosingQuotes": "never",    // Opcional: evita autocompletar aspas
  "typescript.suggest.autoImports": false,  // Se usar TypeScript
  "javascript.suggest.autoImports": false   // Se usar JavaScript
}